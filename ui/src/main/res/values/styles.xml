<resources>

    <style name="schacc_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/schacc_activity_padding</item>
        <item name="android:paddingRight">@dimen/schacc_activity_padding</item>
        <item name="android:paddingBottom">@dimen/schacc_activity_padding</item>
        <item name="android:paddingTop">@dimen/schacc_activity_top_padding</item>
    </style>

    <style name="schacc_NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBarOverlay">false</item>
    </style>
    
    <style name="schacc_progressBar">
        <item name="colorAccent">@color/schacc_progressColor</item>
    </style>

    <style name="schacc_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/schacc_black</item>
        <item name="android:textSize">@dimen/schacc_default_text_size</item>
    </style>

    <style name="schacc_text.secondary" parent="schacc_text">
        <item name="android:textColor">@color/schacc_darkGrey</item>
        <item name="android:textSize">@dimen/schacc_secondary_text_size</item>
    </style>

    <style name="schacc_text.link" parent="schacc_text.secondary">
        <item name="android:textColor">@color/schacc_primaryEnabled</item>
    </style>

    <style name="schacc_text.title" parent="schacc_text">
        <item name="android:textSize">@dimen/schacc_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">1dp</item>
    </style>

    <style name="schacc_text.dialog.title" parent="schacc_text">
        <item name="android:textSize">@dimen/schacc_dialog_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="schacc_text.label" parent="schacc_text">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="schacc_text.error" parent="schacc_text.secondary">
        <item name="android:textColor">@color/schacc_error</item>
    </style>

    <style name="schacc_text.bold" parent="schacc_text">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="schacc_text.action" parent="schacc_text">
        <item name="android:textColor">@color/schacc_primaryEnabled</item>
        <item name="android:textSize">@dimen/schacc_default_text_size</item>
    </style>

    <style name="schacc_widget">
        <item name="android:textSize">@dimen/schacc_default_text_size</item>
        <item name="android:paddingTop">@dimen/schacc_main_button_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/schacc_main_button_vertical_padding</item>
    </style>

    <style name="schacc_widget.button.primary" parent="schacc_widget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/schacc_white</item>
        <item name="android:background">@drawable/schacc_main_button_shape</item>
    </style>

    <style name="schacc_widget.button.secondary" parent="schacc_widget">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/schacc_primaryEnabled</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="schacc_widget.field" parent="schacc_widget">
        <item name="android:background">@drawable/schacc_field_shape</item>
        <item name="android:paddingLeft">@dimen/schacc_field_padding_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/schacc_main_button_margin_bottom</item>
    </style>

    <style name="schacc_input_field_widget">
        <item name="android:paddingTop">@dimen/schacc_field_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/schacc_field_padding_vertical</item>
        <item name="android:paddingLeft">@dimen/schacc_field_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/schacc_field_padding_horizontal</item>
        <item name="android:background">@drawable/schacc_field_shape_unfocused</item>
        <item name="android:textColor">@color/schacc_black</item>
        <item name="android:textSize">@dimen/schacc_default_text_size</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="schacc_checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:paddingLeft">@dimen/schacc_checkbox_padding</item>
    </style>

    <style name="schacc_code_figure_input">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:minHeight">@dimen/schacc_default_widget_height</item>
        <item name="android:gravity">center</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:maxLength">1</item>
        <item name="android:clickable">false</item>
    </style>
</resources>
